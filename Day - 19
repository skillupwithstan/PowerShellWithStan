Import-Module AWS.Tools.EC2
#Install-Module AWS.Tools.Common, AWS.Tools.EC2, AWS.Tools.S3

$region = "ap-south-1"

Get-EC2Instance -Region $region |
Select-Object -ExpandProperty Instances |
Where-Object { $_.State.Name -eq "running" } |
Select-Object InstanceId, InstanceType, PublicIpAddress

