#To get the class details
Get-CimClass -Namespace root\cimv2	

win32_
########################################################

Get-Date


Get-Date -Format "dd/MM/yyyy"

Get-Date -Format "dd-MMM-yyyy"


# d --> Day
# M --> Month
# y --> Year
# h --> Hour (12) -- H --> Hour (24)
# m --> Minute
# s --> Seconds
# tt --> AM/PM

Get-Date -Format "dd-MM-yy h:m tt"


(get-date).Day

Get-Date | Get-Member

(Get-Date).AddDays(1)
(Get-Date).AddDays(-1)

(Get-Date).AddHours(-12)

(Get-Date).AddHours(-6)

Get-EventLog -LogName Application -After (Get-Date).AddHours(-6) -EntryType Error | select Message

Get-EventLog -LogName Application -Before (Get-Date).AddHours(-6) -EntryType Error | select TimeGenerated,Message

Get-EventLog -LogName System | Where-Object {$_.EventID -eq "6005"}

Get-EventLog -LogName Application -Source "Microsoft Teams VDI"


