#WMI & CIM

Get-WmiObject -Class win32_operatingsystem | select lastbootuptime

Get-CimInstance -Namespace root\cimv2 -Class win32_operatingsystem | select lastbootuptime

Get-CimInstance -Class win32_operatingsystem | select lastbootuptime

Get-CimClass -Namespace root\cimv2 | Where-Object {$_.CimClassName -like "win32_operating*"}

Get-CimClass -Namespace root\cimv2 | Where-Object {$_.CimClassName -like "win32_network*"}

Get-CimClass -Namespace root\cimv2 | Where-Object {$_.CimClassName -like "win32_disk*"}

Get-CimClass -Namespace root\cimv2 | Where-Object {$_.CimClassName -like "win32_*disk*"}



Get-CimInstance -ClassName win32_diskdrive

Get-CimInstance win32_operatingsystem | select *

Get-CimInstance win32_operatingsystem | select CSName, Lastbootuptime

Get-CimInstance win32_operatingsystem | Get-Member

Get-Cimclass -Namespace root\securitycenter2

Get-CimInstance -Namespace root\securitycenter2 -ClassName AntivirusProduct




