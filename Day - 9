$osname = Get-CimInstance win32_operatingsystem | select Caption

if($osname -match "Microsoft Windows 11*")
{
    $service = Read-Host "Enter the service name"
    if($service.Length -gt 0)
    {
        $status = (Get-Service -Name $service).Status
        Write-Host "The $service status is: $status"
    }
    else
    {
        "Please enter the valid service name"
    }
}


$services = Read-Host "Enter the service name (use comma for multiple service name)"
