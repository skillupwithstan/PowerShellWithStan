if($servicename -eq "Spooler")
{
    Write-Host "The entered service name is Spooler"
    Get-Service -Name $servicename | select name,status
}
elseif($servicename -eq "winrm")
{
    Write-Host "The entered service name is WinRM"
    Get-Service -Name $servicename | select name,status
}
else
{
    Write-Host "Please enter the valid service name" -ForegroundColor Red
}

Write-Host "End of code"


